@model AlvesMello_IntraNet.Models.Site

@{
	ViewData["Title"] = "Adicionar Site";
}

<h1>Adicionar Site</h1>
<hr />

<div class="container">
	<div class="row">
		<div class="col-12">
			<form asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Name" class="control-label"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<br />

				<div class="form-group">
					<label asp-for="Description" class="control-label"></label>
					<textarea asp-for="Description" class="form-control"></textarea>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<br />

				<div class="d-flex">
					<div class="col-6">
						<label asp-for="ImageUrl" class="control-label"></label>
						<input asp-for="ImageUrl" class="form-control" />
						<span asp-validation-for="ImageUrl" class="text-danger"></span>
					</div>
					<div class="col-1">
					</div>
					<div class="col-5">
						<div class="col-12">
							<label>Prévia da Imagem</label>
						</div>
						<div class="col-12">
							<image class="img-thumbnail" src="/images/ECAC.png" style="max-height: 200px" id="previewImage" />
						</div>
					</div>
				</div>
				<br />

				<div class="col-12">
					<label asp-for="SiteUrl" class="control-label"></label>
					<input asp-for="SiteUrl" class="form-control" />
					<span asp-validation-for="SiteUrl" class="text-danger"></span>
				</div>
				<br />

				<div class="d-flex">
					<div class="col-4">
						<label asp-for="DepartmentId" class="control-label"></label>
					</div>
					<div class="col-2">
					</div>
					<div class="col-3">
						<label class="form-check-label">Marcar como Favorito</label>
					</div>
					<div class="col-3">
						<label class="form-check-label">Marcar como Ativo</label>
					</div>
				</div>

				<div class="d-flex">
					<div class="col-4">
						<select asp-for="DepartmentId" class="btn border-dark dropdown-toggle col-12" asp-items="ViewBag.DepartmentId"></select>
					</div>
					<div class="col-2">
					</div>
					<div class="col-3">
						<input class="form-check-input" asp-for="IsFavorite" /> @Html.DisplayNameFor(model => model.IsFavorite)
					</div>
					<div class="col-3">
						<input class="form-check-input checked" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
					</div>
				</div>
				<br />

				<div class="col-12">
					<div class="d-flex">
						<div class="col-1">
							<div class="form-group">
								<input type="submit" value="Adicionar" class="btn btn-primary" />
							</div>
						</div>
						<div class="col-1">
							<div>
								<a class="btn btn-secondary" asp-area="Admin" asp-controller="AdminSites" asp-action="Index">Voltar</a>
							</div>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>



