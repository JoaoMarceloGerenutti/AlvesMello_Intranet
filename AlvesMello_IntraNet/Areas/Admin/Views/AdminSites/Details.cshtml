@model AlvesMello_IntraNet.Models.Site

@{
    ViewData["Title"] = "Detalhes do Site";
}

<h1>Detalhes do Site</h1>

<div>
    <h4>Id do Site: @Model.SiteId</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Imagem do Site
        </dt>
        <dd class = "col-sm-10">
            <image class="img-thumbnail" src="@Model.ImageUrl" style="max-height: 200px"/>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SiteUrl)
        </dt>
        <dd class = "col-sm-10">
            <a href="@Model.SiteUrl">
                @Html.DisplayFor(model => model.SiteUrl)
            </a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsFavorite)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsFavorite)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            <div class="d-flex text-center text-light">
				<div class="rounded-pill p-2 " style="background-color: #@Html.DisplayFor(model => model.Category.Color)">
					@Html.DisplayFor(model => model.Category.Name)
				</div>
			</div>            
        </dd>
    </dl>
</div>
<div>
	<a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model?.SiteId">Editar Site</a>
	<a class="btn btn-secondary" asp-action="Index">Voltar para a Listagem</a>
</div>
