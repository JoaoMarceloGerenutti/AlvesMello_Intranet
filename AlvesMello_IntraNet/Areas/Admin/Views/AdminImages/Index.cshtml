<table border="0" width="100%">
	<tr>
		<td>
			<form method="post" enctype="multipart/form-data" asp-controller="AdminImages" asp-action="UploadFiles">
				<image src="" width="200" height="150" />

				<div class="form-group">
					<div class="col-md-10">
						<p><b>Selecione um ou mais arquivos para enviar: </b></p>
						<p>(Arquivos com o mesmo nome serão sobrescitos)</p>
						<input type="file" name="files" multiple class="button btn-outline-primary" />
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-10">
						<input type="submit" value="Enviar Arquivo(s)" class="button btn-outline-primary" />
					</div>
				</div> 
			</form>
		</td>
		<td>
			<form method="post" enctype="multipart/form-data" asp-controller="AdminImages" asp-action="GetImages">
				<image src="" width="200" height="150" />
				
				<div class="form-group">
					<div class="col-md-10">
						<p><strong>Visualizar Imagens na Pasta do Servidor </strong></p>
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-10">
						<input type="submit" value="Visualizar Arquivos no Servidor" class="button btn-outline-warning" />
					</div>
				</div> 
			</form>
		</td>
	</tr>
</table>

<div class="container">
	@if (ViewData["Deletado"] != null)
	{
		<div>
			@ViewData["Deletado"]
		</div>
	}
</div>