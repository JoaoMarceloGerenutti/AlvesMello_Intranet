@model AlvesMello_IntraNet.Models.Department

@{
    ViewData["Title"] = "Deletar Departamento";
}

<h1>Deletar Departamento</h1>

<h3>Você tem certeza que deseja deletar esse Departamento?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Name)
		</dt>
		<dd class="col-sm-10">
			<div class="d-flex text-center text-light">
				<div class="rounded-pill p-2" style="background-color: @Html.DisplayFor(model => model.Color)">
					@Html.DisplayFor(model => model.Name)
				</div>
			</div>
		</dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DepartmentId" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Voltar para a Listagem</a>
    </form>
</div>
