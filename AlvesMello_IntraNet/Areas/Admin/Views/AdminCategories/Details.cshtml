@model AlvesMello_IntraNet.Models.Category

@{
	ViewData["Title"] = "Detalhes da Categoria";
}

<h1>Detalhes da Categoria</h1>

<div>
	<h4>Id da Categoria: @Model?.CategoryId</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Name)
		</dt>
		<dd class="col-sm-10">
			<div class="d-flex text-center text-light">
				<div class="rounded-pill p-2 " style="background-color: @Html.DisplayFor(model => model.Color)">
					@Html.DisplayFor(model => model.Name)
				</div>
			</div>
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Description)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Description)
		</dd>
	</dl>
</div>
<div>
	<a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model?.CategoryId">Editar Categoria</a>
	<a class="btn btn-secondary" asp-action="Index">Voltar para a Listagem</a>
</div>
