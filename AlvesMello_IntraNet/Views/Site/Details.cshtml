@model Site

<div class="container">
	<div class="row">
		<div class="card">
			<div class="text-center">
				<img src="@Model.ImageUrl" class="img-fluid" alt="">
			</div>

			<div class="card-block">
				<h2 class="card-title">@Model.Name</h2>

				<p class="card-text">
					<h5>@Model.Description</h5>
				</p>

				<p class="btn btn-group align-content-lg-end">
					<a asp-controller="Site" asp-action="List" class="btn btn-outline-danger">
						Ver Todos os Sites
					</a>

					<a class="btn btn-primary" id="favButton" asp-controller="FavoriteSite" asp-action="AddSiteToFavoriteSite" asp-route-siteId="@Model.SiteId">
						Adicionar @Model.Name aos Favoritos
					</a>
				</p>
			</div>
		</div>
	</div>
</div>