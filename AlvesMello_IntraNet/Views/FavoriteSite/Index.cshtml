@model FavoriteSiteViewModel

<div class="container">
	<div class="row">
		<div style="padding-bottom: 1rem">
			<h4 style="display: flex; align-items: center">
				<img src="~/images/Favorite.png" style="width: 32px; height: 32px; margin-right: 4px" />
				Meus Favoritos
			</h4>
		</div>

		<div style="display: flex; align-content: space-between">
			@foreach (var favoriteSite in Model.FavoriteSite.FavoriteUserSites)
			{
				<div class="card" style="width: 20rem; background-color: rgba(112, 0, 4, 1)">
					<a>
						<img src="@favoriteSite.Site.ImageUrl" class="card-img-top" alt="" style="width: 320px; height: 200px">
					</a>

					<div class="card-body" style="padding-bottom: 5rem">
						<h4 class="card-title" style="color: white">@favoriteSite.Site.Name</h4>

						<button class="btn btn-danger" asp-controller="FavoriteSite" asp-action="RemoveSiteFromFavoriteSite" asp-route-favoriteSiteId="@favoriteSite.Site.SiteId">
							<img src="~/images/Delete.ico" style="width: 32px; height: 32px" />
						</button>
					</div>
				</div>
			}
		</div>

		<div class="text-right">
			<br />
			<div class="btn-group">
				<a class="btn btn-primary" asp-controller="Site" asp-action="List" asp-route-category="">Adicionar Sites</a>
			</div>
		</div>
		<br />
	</div>
</div>
